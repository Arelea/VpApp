
@{
    ViewData["Title"] = "Home Page";
}

<h1>База данных VestPlast</h1>

@if (User.IsInRole("Admin"))
{
    <br />
    <a class="btn btn-sm btn-primary" asp-controller="MainTableDB" asp-action="Index">Сырьевая часть</a>
    <br />
    <hr />
    <a class="btn btn-sm btn-primary" asp-controller="Laboratory" asp-action="Index">Лабораторная часть</a>
    <br />
    <hr />
    <a class="btn btn-sm btn-warning" asp-controller="Users" asp-action="Index">Редактирование пользователей</a>
    <br />
    <hr />
    <a class="btn btn-sm btn-warning" asp-controller="Roles" asp-action="Index">Редактирование ролей</a>
    <br />
    <hr />
    <form method="post" asp-controller="Account" asp-action="Logout">
        <input class="btn btn-sm btn-danger" type="submit" value="Выход" />
    </form>
}
else
{
    <br />
    <a class="btn btn-sm btn-primary" asp-controller="MainTableDB" asp-action="Index">Сырьевая часть</a>
    <br />
    <hr />
    <a class="btn btn-sm btn-primary" asp-controller="Laboratory" asp-action="Index">Лабораторная часть</a>
    <br />
    <hr />
    <form method="post" asp-controller="Account" asp-action="Logout">
        <input class="btn btn-sm btn-danger" type="submit" value="Выход" />
    </form>
}



