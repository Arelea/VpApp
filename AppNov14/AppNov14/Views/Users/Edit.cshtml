@model AppNov14.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}

    <form asp-action="Edit" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="LoginApp" class="control-label">Логин</label>
            <input type="text" asp-for="LoginApp" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="FName" class="control-label">Имя</label>
            <input type="text" asp-for="FName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LName" class="control-label">Фамилия</label>
            <input type="text" asp-for="LName" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" onclick="return confirm('Вы уверенны, что хотите сохранить изменения?')" />
        </div>
    </form>
