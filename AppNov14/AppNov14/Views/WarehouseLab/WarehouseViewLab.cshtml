@model AppNov14.Models.WarehouseLab

@{
    ViewData["Title"] = "Склад лаборатории";
}
<br />
<h1 class="text-center">Складская лабораторная таблица</h1>
<br />
<div class="alert alert-info">
    <div class="col-md-4">
        <form asp-action="WarehouseViewLab">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-check">
                <input asp-for="WarehouseSubs" type="checkbox" class="form-check-input">
                <label asp-for="WarehouseSubs" class="form-check-label">Подключить основной склад</label>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Применить" class="btn btn-primary btn-sm">
            </div>
        </form>
    </div>
</div>
<hr />
@{

    int j = -1;
}
@foreach (var item in Model.listil)
{
    j++;

    <div class="jumbotron">
        <h4 class="text-center">@Model.list[j]</h4>
    </div>

    <table align="center" class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    #Id
                </th>
                <th>
                    Тип материала
                </th>
                <th>
                    Наименование типа материала
                </th>
                <th>
                    Поставщик
                </th>
                <th>
                    Производитель
                </th>
                <th>
                    Остатки
                </th>
            </tr>

        </thead>

        <tbody>
            @for (int i = 0; i < item.Rows.Count; i++)

            {
                <tr>
                    <td>
                        @item.Rows[i]["Id"]
                    </td>
                    <td>
                        @item.Rows[i]["TypeOfMaterial"]
                    </td>
                    <td>
                        @item.Rows[i]["NameOfTypeMaterial"]
                    </td>
                    <td>
                        @item.Rows[i]["Provider"]
                    </td>
                    <td>
                        @item.Rows[i]["Manufacturer"]
                    </td>
                    <td>
                        @item.Rows[i]["Leftovers"]
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <hr />
    <br />
}

<br>
<br>
<a class="btn btn-outline-secondary" asp-controller="Laboratory" asp-action="Index">Назад</a>
<br />
